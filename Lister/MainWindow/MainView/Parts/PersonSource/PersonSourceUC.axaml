<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="830" d:DesignHeight="48"
			 xmlns:vm="clr-namespace:View.MainWindow.MainView.Parts.PersonSource.ViewModel;assembly=View"
             x:Class="View.MainWindow.MainView.Parts.PersonSource.PersonSourceUserControl"
			 x:DataType="vm:PersonSourceViewModel">


	<Grid Name="source"  Background="#EEEEEE">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="70" ></ColumnDefinition>
			<ColumnDefinition ></ColumnDefinition>
			<ColumnDefinition Width="44" ></ColumnDefinition>
			<ColumnDefinition Width="5" ></ColumnDefinition>
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="8" ></RowDefinition>
			<RowDefinition></RowDefinition>
			<RowDefinition Height="6" ></RowDefinition>
		</Grid.RowDefinitions>

		<Label
			Grid.Column="0"
			Grid.Row="1"
			FontSize="16"
			Padding="10,5"
			VerticalContentAlignment="Center"
			Content="Файл:"/>

		<Border
			Grid.Column="1"
			Grid.Row="1"
			Height="32"
			Background="White"
			BorderBrush="Black"
			CornerRadius = "3"
			BorderThickness="1">

			<TextBlock
				FontSize="16"
				Height="28"
				Padding="10,4"
				Background="White"
				Text="{Binding  Path = SourceFilePath,  Mode=OneWay}"/>

		</Border>

		<Button
			Name="openPicker"
			Classes="Primary"
			Grid.Column="2"
			Grid.Row="1"
			Width="32"
			Height="32"
			Padding="0,8"
			HorizontalContentAlignment="Center"
			HorizontalAlignment="Center"
			Command="{Binding ChooseFile}"
			ToolTip.Tip="Выберите файл с сотрудниками"
			FontFamily="{StaticResource FA}"
			Content="&#xF141;" />
	</Grid>
	
</UserControl>



