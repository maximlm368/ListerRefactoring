<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="20">
      <!-- Add Controls for Previewer Here -->
    </Border>
  </Design.PreviewWith>


	<Style Selector="ComboBox">
		<Setter Property="FontSize" Value="26"/>
		<Setter Property="Height" Value="32"/>
	</Style>


	<Style Selector="TextBox">
		<Setter Property="FontSize" Value="16"/>
		<Setter Property="Height" Value="32"/>
		<Setter Property="Background" Value="#ffffff"/>
		<Setter Property="BorderBrush" Value="#514C48"/>
		<Setter Property="Foreground" Value="#000000"/>
		<Setter Property="SelectionBrush" Value="#4aacfe"/>
		<Setter Property="SelectionForegroundBrush" Value="#fafafa"/>
	</Style>

	
	<Style Selector="TextBlock.picture /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="FontFamily" Value="{StaticResource FA}"/>
	</Style>


	<Style Selector="Label /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="FontSize" Value="16"/>
		<Setter Property="Height" Value="32"/>
	</Style>
	<Style Selector="Label.picture /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="FontFamily" Value="{StaticResource FA}"/>
	</Style>
	<Style Selector="Label.height_40 /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Height" Value="40"/>
	</Style>
	<Style Selector="Label.narrow /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Height" Value="22"/>
		<Setter Property="Padding" Value="3,0"/>
	</Style>
	<Style Selector="Label.modalLabel /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Height" Value="20"/>
		<Setter Property="FontSize" Value="12"/>
		<Setter Property="Margin" Value="5,0,0,0"/>
	</Style>

	
	<Style Selector="Label.comboboxItem /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="#FFFFFF"/>
		<Setter Property="BorderBrush" Value="#D5E8F6"/>
		<Setter Property="Foreground" Value="#000000"/>
		<Setter Property="Height" Value="32"/>
		<Setter Property="Padding" Value="8,4"/>
		<Setter Property="BorderThickness" Value="2"/>
	</Style>
	<Style Selector="Label.comboboxItem:pointerover /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="#E3F1FC"/>
		<Setter Property="BorderBrush" Value="#4AACFE"/>
		<Setter Property="Foreground" Value="#000000"/>
	</Style>
	<Style Selector="Label.comboboxItem:pressed /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="#E3F1FC"/>
		<Setter Property="BorderBrush" Value="#D5E8F6"/>
		<Setter Property="Foreground" Value="#000000"/>
	</Style>


	<Style Selector="TextBlock.printErrorMessage /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="FontSize" Value="12"/>
		<Setter Property="Height" Value="18"/>
	</Style>


	<Style
		Selector="Border.rotatable">
	</Style>
	
</Styles>


